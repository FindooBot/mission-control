{
  "build": {
    "beforeBuildCommand": "npm install",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:1337",
    "distDir": "../public",
    "withGlobalTauri": true
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.finlay.missioncontrol",
      "longDescription": "Mission Control - A personal work dashboard integrating Calendar, GitHub, Shortcut, and Todoist",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "../src",
        "../node_modules",
        "../package.json"
      ],
      "shortDescription": "Work Dashboard",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self' http://localhost:1337; script-src 'self' 'unsafe-inline' http://localhost:1337; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:1337; img-src 'self' https: data:;",
      "dangerousUseHttpScheme": true
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "Mission Control",
        "width": 1400,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "visible": false
      }
    ]
  }
}
